<%- include('../partials/header'); %> <%- include('../partials/navbar'); %>
<base href="seasons/" />
<div class="container">
  <h1>Add a Season</h1>
  <form
    method="post"
    enctype="multipart/form-data"
    id="fileform"
    action="/api/season/fileupload"
  >
    <div class="form-group mb-2">
      <input
        class="form-control"
        type="text"
        placeholder="Season Name"
        id="seasonName"
        name="Name"
        required
      />
    </div>

    <div class="form-group mb-2">
      <input
        class="form-control"
        type="file"
        id="files"
        name="files"
        multiple
        required
      />
    </div>

    <div class="form-group">
      <button class="btn btn-success">
        <span><i class="fa-sharp fa-solid fa-floppy-disk"></i> </span>Save
      </button>
    </div>
  </form>

  <p id="status"></p>
</div>
<script type="text/javascript">
  $(document).ready(() => {
    $("#fileform").on("submit", async (e) => {
      $("#status").text("UPLOADING...");
      e.preventDefault();
      const resp = await createSeason();
      uploadFiles(resp.insertId);
    });
  });

  const createSeason = () => {
    const seasonName = $("#seasonName").val();
    return new Promise((resolve, reject) => {
      $.ajax({
        url: "/api/season/createSeason",
        type: "post",
        data: JSON.stringify({
          seasonName: seasonName,
        }),
        contentType: "application/json",
        success: (response) => {
          resolve(response);
        },
        error: (err) => {
          reject(err);
        },
      });
    });
  };

  const uploadFiles = async (seasonId) => {
    const files = $("#files")[0].files;
    for (let i = 0; i < files.length; i++) {
      await upload(files[i], seasonId);
    }
  };

  const upload = (file, seasonId) => {
    return new Promise((resolve, reject) => {
      const fd = new FormData();
      fd.append("file", file);
      $.ajax({
        url: `/api/season/fileupload/${seasonId}`,
        type: "post",
        data: fd,
        contentType: false,
        processData: false,
        success: (response) => {
          $("#status").text("UPLOADED!");
          resolve();
        },
        error: (e) => {
          reject(e);
        },
      });
    });
  };
</script>
<%- include('../partials/footer'); %>
